<link rel="stylesheet" href="{{ 'section-slider.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'section-slider.css' | asset_url | stylesheet_tag }}</noscript>

<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@latest/dist/js/splide.min.js"></script>

<div class="splide">
    <div class="splide__list">
        <div class="splide__slide">
            {%- if section.settings.slideOne != blank -%}
                <img src="{{ section.settings.slideOne | img_url: '1024x' }}" alt="">
            {%- else -%}
                {{ 'collection-2' | placeholder_svg_tag: 'placeholder-svg placeholder' }} 
            {%- endif -%}
        </div>
        <div class="splide__slide">
            {%- if section.settings.slideTwo != blank -%}
                <img src="{{ section.settings.slideTwo | img_url: '1024x' }}" alt="">
            {%- else -%}
                {{ 'collection-2' | placeholder_svg_tag: 'placeholder-svg placeholder' }} 
            {%- endif -%}
        </div>
        <div class="splide__slide">
            {%- if section.settings.slideThree != blank -%}
                <img src="{{ section.settings.slideThree | img_url: '1024x' }}" alt="">
            {%- else -%}
                {{ 'collection-2' | placeholder_svg_tag: 'placeholder-svg placeholder' }} 
            {%- endif -%}
        </div>
    </div>
</div>

{% schema %}
  {
    "name": "Slider",
    "settings": [
        {
            "type": "image_picker",
            "id": "slideOne",
            "label": "Slide 1"
        },
        {
            "type": "image_picker",
            "id": "slideTwo",
            "label": "Slide 2"
        },
        {
            "type": "image_picker",
            "id": "slideThree",
            "label": "Slide 3"
        }                
    ],
    "presets": [
        {
            "name": "Slider"
        }
    ]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
    document.addEventListener( 'DOMContentLoaded', function () {
        new Splide( '.splide' ).mount();
    } );
{% endjavascript %}