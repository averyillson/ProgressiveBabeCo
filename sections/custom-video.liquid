<div class="video-section--custom">
    <video autoplay muted loop>
        <source src="{{ section.settings.custom_video_url }}" type="video/mp4">
    </video>
</div>

{% stylesheet %}
  video {
    /* override other styles to make responsive */
    width: 100%    !important;
    height: auto   !important;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Custom Video",
  "tag": "section",
  "class": "video-section--custom",
  "settings": [
    {
        "type": "text",
        "id": "custom_video_url",
        "label": "Video Url"
    }
  ],
  "presets": [
      {
          "name": "Custom Video"
      }
  ]
}
  {% endschema %}
